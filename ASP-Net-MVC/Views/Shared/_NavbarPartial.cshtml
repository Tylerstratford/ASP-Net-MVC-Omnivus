
<div class="container d-flex">
    <div class="logo-container">
        <h2>OmniVus.</h2>
        <p>IT Service & Technology</p>
    </div>
    <div class="justify-content-between social-container">
        <div class="d-flex justify-content-between">
            <div>
                <a href="mailto:info@AppDomain.com" class="socials-link">info@AppDomain.com</a>
            </div>

            @if (SignInManager.IsSignedIn(User))
            {
                <div class="socials-link">
                    @*<span>Welcome @User.Identity?.Name</span>*@
                    <span>Signed in as @await ProfileManager.DisplayNameAsync(User.FindFirst("UserId").Value)</span>
                    <a asp-controller="Profile" asp-action="Index" asp-route-id="@User.FindFirst("UserId").Value" >My Profile</a>
                     @if (User.IsInRole("admin"))
                    {
                        <a asp-controller="Admin" asp-action="UserList">Users</a>
                    }
                    <a asp-controller="auth" asp-action="SignOut">Sign Out</a>
                </div>
              
            }

            else
            {
                <div class="socials-link">
                    <a href="#">Facebook</a>
                    <a href="#">Twitter</a>
                    <a href="#">LinkedIn</a>
                    <a href="#">YouTube</a>
                </div>
            }
        </div>
        <nav class="justify-content-end d-flex align-items-center navbar">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Services" asp-action="Index">Service</a>
            <a asp-controller="Contact" asp-action="Index">Contact</a>
            @if(!SignInManager.IsSignedIn(User))
            {
                <a asp-controller="Auth" asp-action="SignIn"><button class="btn-book">Sign In / Sign Up</button></a>
            }
        </nav>
    </div>
</div>